{
  "name": "passthrough-piano-server",
  "version": "0.1.0",
  "description": "Socket.io server for PassthroughPiano VR app for Quest 2",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "dev": "cross-env NODE_ENV=development nodemon ./src/main.ts",
    "prod": "tsc && node ./dist/main.js",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write .",
    "type-check": "tsc --pretty --noEmit",
    "combo": "npm run format && npm run lint && npm run type-check"
  },
  "author": "Lachlan Sleight",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "easymidi": "^2.0.5",
    "express": "^4.17.1",
    "socket.io": "^4.1.3",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "cross-env": "^7.0.3",
    "cross-os": "^1.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.0"
  }
}
